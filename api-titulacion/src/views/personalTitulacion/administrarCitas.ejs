<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administración</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand">Administración Titulación</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/citas/administrarCitas">Administrar citas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/citas/administrarUsuarios">Administrar usuarios</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/citas/egresados/agregar">Agregar Egresados</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/citas/personal/agregar">Agregar Personal</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <h1>Listado de Citas</h1>

    <table>
      <thead>
        <tr>
          <th>Matrícula</th>
          <th>Fecha</th>
          <th>Hora</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% citas.forEach(cita => { %>
        <tr>
          <td><%= cita.egresadoMatricula %></td>
          <td><%= cita.fecha %></td>
          <td><%= cita.hora %></td>
          <td>
            <!-- Botones de editar y eliminar -->
            <form action="/citas/<%= cita.id %>/editar" method="GET">
              <button type="submit">Editar</button>
            </form>
            <form action="/citas/<%= cita.id %>/eliminar" method="POST">
              <button type="submit">Eliminar</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
